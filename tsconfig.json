{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "noEmit": true,
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    ".storybook/**/*.ts",
    "vite.config.ts",
    "vitest-setup.ts",
    "vitest.config.ts"
  ],
  "exclude": ["dist", "node_modules", "storybook-static"]
}
